<div class="container">
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "form-signin" do |form| %>
    <h2>Please sign in</h2>
    <div class="field form-group">
      <%= form.label :email, class: "sr-only" %><br />
      <%= form.email_field :email, autofocus: true, autocomplete: "email", id: :user_email, class: "form-control", placeholder: "Email address", required: true %>
    </div>

    <div class="field form-group">
      <%= form.label :password, class: "sr-only" %><br />
      <%= form.password_field :password, autocomplete: "off", id: :user_password, class: "form-control", placeholder: "Password", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= form.check_box :remember_me, id: :user_remember_me %>
        <%= form.label :remember_me, "Remember me" %>
        <%#= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions form-group">
      <%= form.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>

</div>
