
<div class="container">
  <%#= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "form-signin" do |f| %>
    <h2>Please sign in</h2>
    <div class="field">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: :user_email, class: "form-control", placeholder: "Email address", required: true %>
    </div>

    <div class="field">
      <%= f.label :password, class: "sr-only" %><br />
      <%= f.password_field :password, autocomplete: "off", id: :user_password, class: "form-control", placeholder: "Password", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label for="remember_me"><%= f.check_box :remember_me, id: :user_remember_me %> Remember me</label>
        <%#= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>

</div>
