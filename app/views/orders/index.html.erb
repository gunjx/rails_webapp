<div class="row">
  <% @orders.each do |order| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <h1>
        Order # <%= order.id %>: <%= link_to order.product.name, order.product %>
      </h1>
      <p><%= order.product.description %></p>
      <p><strong><%= order.total %> EUR</strong></p>
    </div><!-- /col -->
  <% end %>
</div>
