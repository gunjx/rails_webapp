        <div class="thumbnail">
          <h3>Order # <%= order.id %>: <%= link_to order.product.name, order.product %></h3>
          <p><%= order.product.description %></p>
          <p><strong><%= number_to_currency(order.total, unit: 'â‚¬', precision: 2) %></strong></p>
        </div><!-- /col -->
      </div>
    <% end %>
  </div>
</div>
